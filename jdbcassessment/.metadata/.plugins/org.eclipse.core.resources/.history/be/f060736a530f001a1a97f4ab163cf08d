package com.testyantra.phoneproject.dao;

import java.sql.Connection;
import java.sql.DriverManager;
import java.sql.PreparedStatement;
import java.sql.ResultSet;
import java.sql.Statement;
import java.util.ArrayList;
import java.util.List;

import com.testyantra.phoneproject.dto.ContactBean;

public class ContactDAOImpl implements ContactDAO {

	
	public List<ContactBean> getAllContactData() {

		String url = "jdbc:mysql://localhost:3306/contactfile?user=root&password=root";
		String sql = "select * from contact";
		Connection conn = null;
		Statement stmt = null;
		ResultSet rs = null;

		try  {
			Class.forName("com.mysql.jdbc.Driver");
			conn = DriverManager.getConnection(url);
			stmt = conn.createStatement();
			rs = stmt.executeQuery(sql);
			ArrayList<ContactBean> result = new ArrayList<ContactBean>();
			while(rs.next()) {
				String name= rs.getString("name");
				bean.setName(name);
				int number = rs.getInt("number");
				bean.setNumber(number);
				String groupName = rs.getString("groupName");
				bean.setGroupName(groupName);

				result.add(bean);

			}
			return result;

		}catch (Exception e) {
			e.printStackTrace();
			return null;
		}finally {
			try {
				if(conn!=null) {
					conn.close();
				}
				if(stmt!=null) {
					stmt.close();
				}
				if(rs!=null) {
					rs.close();
				}
			}catch(Exception e) {
				e.printStackTrace();

			}
		}


	}



	public ContactBean searchEmployeeData (int id) {
		String url = "jdbc:mysql://localhost:3306/ust_ty_db?user=root&password=root";
		String sql = "select * from employee_info where id =?";
		Connection conn = null;
		//Statement stmt = null;
		PreparedStatement  pstmt = null;
		ResultSet rs = null;


		try  {
			Class.forName("com.mysql.jdbc.Driver");
			conn = DriverManager.getConnection(url);
			pstmt = conn.prepareStatement(sql);
			pstmt.setInt(1, id);
			rs = pstmt.executeQuery();

			if(rs.next()) {
				EmployeeBean bean = new EmployeeBean();
				bean.setId(rs.getInt("id"));
				bean.setName(rs.getString("name"));
				bean.setSal(rs.getInt("sal"));
				bean.setGender(rs.getString("gender"));

				return bean;
			}else {
				return null;
			}


		}catch (Exception e) {
			e.printStackTrace();
			return null;
		}finally {
			try {
				if(conn!= null) {
					conn.close();
				}

				if(pstmt!=null) {
					pstmt.close();
				}
				if(rs!=null) {
					rs.close();
				}
			}catch(Exception e) {
				e.printStackTrace();
			}
		}
	}




}
